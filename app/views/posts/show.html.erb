<div class="container text-center">
  <div class="row">
    <div class="col">
        <div class="card">
            <h1> <%= @post.title %> </h1>
            <h3> <%= @post.author %> </h3>
            <p> <%= @post.content %> </p>
            <p> <%= @post.created_at %> </p>
        </div>
    </div>
  </div>
  <div class="row">
        <div class="col">
            <table class="table">
            <thead>
            <tr>
                <th scope="col">Author</th>
                <th scope="col">Comment</th>
                <th scope="col">Date</th>
            </tr>
            </thead>
            <tbody>
            <% @post.comments.each do |comment| %>    
                <tr> 
                <td> <%= comment.author %> </td>
                <td> <%= comment.content %> </td>
                <td> <%= comment.created_at %> </td>
                </tr>
            <% end %>
            </tbody>
            </table>
        </div>
    </div>
</div>
